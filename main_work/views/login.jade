extends layout

block login
  div.container
    h2 Login
    p Welcome to Lord-of-Prediction
    form(method='POST' action='/login')
      div.form-group
        label(for='username') Username:
        input(type='text', id='username', name='username').form-control
      div.form-group
        label(for='password') Password:
        input(type='password', id='password', name='password').form-control
      div.form-group
          button(type='submit').btn.btn-primary.col-sm-6 Submit
          button(type='button', onclick=" javascript: history.go(-1); ").btn.btn-primary.col-sm-6 Back
